# Environment configuration for local development
# Copy or adjust these values as needed. Secrets here are placeholders.

# PostgreSQL Database Connection URL
PGVECTOR_URL="postgresql+psycopg2://postgres:postgres@localhost:5433/postgres"

# Individual Postgres settings (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# API Key for the embedding model service
EMBED_API_KEY=replace-with-your-embed-key

# Base URL for the embedding model service
EMBED_API_BASE=https://example.com/v1

# Model name for the embedding service
EMBED_MODEL_NAME=nvidia/nv-embed-v2

# API Key for the LLM service (for smart splitting)
LLM_API_KEY=replace-with-your-llm-key

# Base URL for the LLM service (for smart splitting)
LLM_API_BASE=https://example.com/v1

# Model name for the chat/generation service (used in agentic RAG)
CHAT_MODEL_NAME=openai/gpt-oss-20b
